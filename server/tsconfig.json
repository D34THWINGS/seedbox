{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "outDir": "dist",
    "noImplicitReturns": true,
    "baseUrl": ".",
    "paths": {
      "fs-chunk-store": ["src/@types/fsChunkStore.d.ts"],
      "stream-transcoder": ["src/@types/streamTranscoder.d.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}
