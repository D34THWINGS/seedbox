{
  "name": "seedbox",
  "private": true,
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "workspaces": ["server"],
  "scripts": {
    "start": "NODE_ENV=production node .",
    "dev": "yarn workspace @seedbox/server dev",
    "build": "yarn workspace @seedbox/server build",
    "typecheck": "yarn workspace @seedbox/server typecheck",
    "lint": "eslint \"server/src/**/*.ts\"",
    "lint:cache": "yarn lint --cache",
    "lint:fix": "yarn lint --fix",
    "codegen": "graphql-codegen --config ./codegen.yml"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.20.1",
    "@graphql-codegen/typescript": "^1.20.2",
    "@graphql-codegen/typescript-resolvers": "^1.18.2",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-plugin-import": "^2.22.1",
    "prettier": "^2.2.1"
  },
  "engines": {
    "node": "^14.0.0"
  }
}
